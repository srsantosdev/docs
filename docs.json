{
  "$schema": "https://mintlify.com/docs.json",
  "name": "Scanify",
  "description": "Extraia e valide dados de documentos com uma única API.",
  "logo": {
    "dark": "/logo/scanify-logo.svg",
    "light": "/logo/scanify-logo.svg"
  },
  "favicon": "/scanify-favicon.svg",
  "styling": {
    "eyebrows": "section",
    "codeblocks": "dark"
  },
  "appearance": {
    "default": "dark",
    "strict": true
  },
  "theme": "mint",
  "search": {
    "prompt": "Pesquise por um tópico ou palavra chave..."
  },
  "background": {
    "decoration": "windows",
    "color": {
      "dark": "#000000"
    }
  },
  "colors": {
    "primary": "#CEFF1A",
    "dark": "#CEFF1A",
    "light": "#CEFF1A"
  },
  "navbar": {
    "links": [
      {
        "label": "Entrar",
        "href": "https://scanify.com.br"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Cadastre-se",
      "href": "https://scanify.com.br/register"
    }
  },
  "navigation": {
    "anchors": [
      {
        "anchor": "Guia Técnico",
        "icon": "book-open",
        "groups": [
          {
            "group": "Como funciona",
            "pages": [
              "introduction",
              "flow",
              "authentication",
              "callback-url"
            ]
          },
          {
            "group": "Documentos e Dados",
            "pages": [
              "document-types",
              "response-payload",
              "validation",
              "limits"
            ]
          },
          {
            "group": "Integrações",
            "pages": [
              "examples/index",
              "sdk/coming-soon"
            ]
          },
          {
            "group": "Histórico",
            "pages": [
              "changelog/index"
            ]
          }
        ]
      },
      {
        "anchor": "Referência de API",
        "icon": "server",
        "pages": [
          "api-reference/endpoint/ocr-upload",
          "api-reference/endpoint/health-check"
        ]
      },
      {
        "anchor": "Blog",
        "href": "https://scanify.com.br/blog"
      }
    ]
  }
}